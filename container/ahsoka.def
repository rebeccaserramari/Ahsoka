Bootstrap: library
From: ubuntu:20.04


%post

	apt-get update -y
	apt-get install -y --no-install-recommends \
        software-properties-common
        add-apt-repository universe
        apt-get update -y
        apt-get install -y libjellyfish-2.0-dev 
        apt-get install -y cmake
        apt-get install -y build-essential
        apt-get install -y pkg-config
        apt-get install -y git
        
	# download whatshap code
	git clone https://github.com/whatshap/whatshap.git /root/whatshap-code
	cd /root/whatshap-code
	git checkout 8f4c0c070d0b5d8e6d2c03e363965d0efb50a960
	
	# download Ahsoka code
	git clone https://github.com/rebeccaserramari/Ahsoka.git /root/Ahsoka
	# install Ahsoka
	cd /root/Ahsoka
	mkdir build
	cd build
	cmake ..
	make


%environment
	# fix the locale
	export LC_ALL=C	
